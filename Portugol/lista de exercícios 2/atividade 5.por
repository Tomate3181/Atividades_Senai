// ATIVIDADE 05
// Código que leia a idade do usuário e imprima se ele é maior ou menor de idade

// Samuel Mioni - Nº24, Turma 2ºB
programa {
  funcao inicio() {
    inteiro idade

    escreva ("Escreva sua idade: ")
    leia (idade)

    se (idade >= 18) {
      escreva ("Você é maior de idade")
    }
    senao {
      escreva ("Você é menor de idade")
    }
  }
}
